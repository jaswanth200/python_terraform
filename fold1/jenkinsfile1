pipeline {
    agent any
    environment {
    AMI_ID = ''
}

    stages {
        stage('Terraform Init') {
            steps {
                dir('fold1') {
                    script {
                        // Initialize Terraform
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('fold1') {
                    script {
                        // Apply the Terraform configuration
                        sh 'terraform apply -auto-approve | grep "python_First_Instance_ami" > /tmp/ami.tfvars'
                    }
                }
            }
        }
    }
} 
